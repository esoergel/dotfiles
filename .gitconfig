[user]
	name = Ethan Soergel
	email = esoergel@gmail.com
[alias]
	co = checkout
	br = branch
	st = status
	su = submodule update

	# LOG SHORTCUTS
	# show commits not on master
	lnm = log HEAD --not master
	
	# colors: normal, black, red, green, yellow, blue, magenta, cyan and white
	# attributes: bold, dim, ul, blink and reverse.

	# show log listing files changed
	ls = log --stat --pretty=format:"\
%C(magenta)%ad\\ \
%C(blue)[%cn]\\ \
%C(green)%h\\ \
%Cred%d\\ \
%n\
%C(yellow)%s\\ \
%n\
" --decorate --date=short
	;lsn = !git ls HEAD --not   # this breaks autocompletion :(
	lsn = log --stat --pretty=format:"\
%C(magenta)%ad\\ \
%C(blue)[%cn]\\ \
%C(green)%h\\ \
%Cred%d\\ \
%n\
%C(yellow)%s\\ \
%n\
" --decorate --date=short HEAD --not
	;lsnm = !git lsn master
	lsnm = log --stat --pretty=format:"\
%C(magenta)%ad\\ \
%C(blue)[%cn]\\ \
%C(green)%h\\ \
%Cred%d\\ \
%n\
%C(yellow)%s\\ \
%n\
" --decorate --date=short HEAD --not master

	# from mwhite's gitconf:
	#show log with full diffs
	lpn = log -p HEAD --not  
	lpnm = log -p HEAD --not master

	# https://gist.github.com/mwhite/6887990
	# one-line log
	l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
	# list aliases
	la = "!git config -l | grep alias | cut -c 7-"
[core]
	editor = vim
	excludesfile = /home/ethan/.gitignore
[push]
	default = nothing
[color]
	ui = true
[fetch]
	recurseSubmodules = on-demand
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
